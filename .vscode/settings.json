{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.markdownlint": true
  },

  "typescript.tsdk": "node_modules/typescript/lib",
  // settings for extensions below

  // spell checker settings
  "cSpell.language": "en-GB",
  "cSpell.enableFiletypes": ["asciidoc", "csharp", "git-commit", "log", "markdown", "plaintext", "powershell", "text"],
  "cSpell.flagWords": ["colour"],

  "cSpell.words": ["amaechler", "downsample", "eslintcache", "longpaths", "lttb", "vars", "vercel"],

  // eslint extension settings
  "eslint.packageManager": "yarn",
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html"],

  // language associations
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
